<h2>Pilóta szerkesztése</h2>
<form method="post" action="/pilota/<%= item.az %>" class="col-md-6">
  <div class="mb-3"><label class="form-label">AZ</label><input class="form-control" value="<%= item.az %>" disabled></div>
  <div class="mb-3"><label class="form-label">Név</label><input class="form-control" name="nev" value="<%= item.nev %>" required></div>
  <div class="mb-3"><label class="form-label">Nem (F/N)</label><input class="form-control" name="nem" value="<%= item.nem %>" maxlength="1" required></div>
  <div class="mb-3"><label class="form-label">Szüldátum</label><input class="form-control" name="szuldat" value="<%= item.szuldat %>" required></div>
  <div class="mb-3"><label class="form-label">Nemzet</label><input class="form-control" name="nemzet" value="<%= item.nemzet %>" required></div>
  <button class="btn btn-primary">Mentés</button>
</form>
